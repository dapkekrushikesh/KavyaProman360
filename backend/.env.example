# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit the actual .env file to Git!

# Server Configuration
PORT=3000

# MongoDB Configuration
# Get this from MongoDB Atlas: https://www.mongodb.com/cloud/atlas
MONGO_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/?appName=YourAppName

# JWT Configuration
# Generate a secure random string for JWT_SECRET
JWT_SECRET=your_jwt_secret_here_use_a_long_random_string
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=uploads

# Email Configuration (Legacy - Optional)
EMAIL_USER=your_gmail_address@gmail.com
EMAIL_PASS=your_gmail_app_password

# Brevo (Sendinblue) Email Service Configuration
# Sign up at: https://app.brevo.com/account/register
# Get your API key from: Settings > SMTP & API > API Keys
# Free tier: 300 emails/day
BREVO_API_KEY=xkeysib-your-actual-api-key-here
BREVO_FROM_EMAIL=your.verified.email@example.com
BREVO_SENDER_NAME=KavyaProman360

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
